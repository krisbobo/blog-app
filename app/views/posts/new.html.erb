<%= stylesheet_link_tag('new-post')%>

<h2>Add new post</h2>
<%= form_with model: @post, url: user_posts_path(@user) do |form| %>
  <div class="form-container">
  <label for="post_title">title:</label>
    <%= form.text_field :title, required: true, autofocus: true, class: "form-input", placeholder: "Enter post the title" %>
    <label for="post_title">text:</label>
    <%= form.text_area :text, required: true, autofocus: true, class: "form-input", placeholder: "Enter post the body"%>
    <%= form.submit "Create", class: "create-btn" %>
  </div>
<% end %>
