<%= stylesheet_link_tag('new-comment')%>

<h3> Add new comment</h3>
<div class="comment_container">
  <%= form_with model: @comment, url: user_post_comments_path(@post) do |f| %>
    <div class="comment-form">
      <%= f.text_field :text, required: true, autofocus: true, placeholder: ' Enter your comment here', class: "comment_box" %>
      <%= f.submit "Comment", class: "comment_btn" %>
    </div>
  <% end %>
</div>
